<div class="movie-mini">
  <div class="movie-left">
    <div class="movie-pic">
      <%= image_tag movie.poster, class: "img-responsive" %>
    </div>
  </div>

  <div class="movie-right">
    <div class="movie-name">
      <span class="name">
        <%= link_to movie do %>
          <%= index %>. <%= movie.name %>
        <% end %>
      </span>
    </div>
    <div class="star">
      <% (1..movie.point).each do |index| %>
        <i class="fa fa-star"></i>
      <% end %>
    </div>
  </div>
  <div class="movie-sum-review">
    <i class="fa fa-user" aria-hidden="true"></i>
    <%= t "movies.show.rate_sum" %>
    <span><%= movie.reviews.size %></span>
  </div>
  <div class="clearfix"></div>
</div>
